<h2 class="mb-3 text-center">Create Note</h2>
<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <form method="post" action="/create">
          <div class="form-group">
            <label for="title">Note Title</label>
            <input type="text" class="form-control" name="title" placeholder="Enter note title">
          </div>
          <div class="form-group">
            <label for="desc">Note Title</label>
            <textarea type="text" class="form-control" name="desc" placeholder="Enter your note description..."></textarea>
          </div>
          <button class="btn btn-primary" type="submit">Create</button>
        </form>
      </div>
    </div>
  </div>
</div>